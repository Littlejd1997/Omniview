<p id="notice"><%= notice %></p>

<h1>Listing Periscopes</h1>

<table>
  <thead>
    <tr>
      <th>Twitterhandle</th>
      <th>Broadcast</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periscopes.each do |periscope| %>
      <tr>
        <td><%= periscope.twitterhandle %></td>
        <td><%= periscope.broadcast_id %></td>
        <td><%= link_to 'Show', periscope %></td>
        <td><%= link_to 'Edit', edit_periscope_path(periscope) %></td>
        <td><%= link_to 'Destroy', periscope, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

